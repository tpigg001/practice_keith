# Define two tuples each with four elements
print("EXAMPLE 1")
print("")
tuple1 = ("Keith", "Dowd", "1234567890", "my@email.com")
tuple2 = ("Trey", "Pigg", "0987654321", "your@email.com")

# Print the tuples
print(f"Tuple 1: {tuple1}")
print("")
print(f"Tuple 2: {tuple2}")
print("")

# Access the first element of the first tuple
print("EXAMPLE 2")
print("")
print(f"First element of Tuple 1: {tuple1[0]}")
print("")

# Access the third element of the second tuple
print("EXAMPLE 3")
print("")
print(f"Third element of Tuple 2: {tuple2[2]}")
print("")

# Loop through and print all elements in first tuple
print("EXAMPLE 4")
print("")
print("Print all elements in first tuple...")
print("")
for element in tuple1:
    print(element)
print("")
print("...Done!")
print("")

# Add both tuples to a list
print("EXAMPLE 5")
print("")
list_of_tuples = [tuple1, tuple2]
print(f"List of tuples: {list_of_tuples}")
print("")

# You can also add the tuples to a list this way:
# 1. Define an empty list
#       list_of_tuples = []
# 2. Append the first tuple to the list
#       list_of_tuples.append(tuple1)
# 3. Append the second tuple tot the list
#       list_of_tuples.append(tuple2)

# Loop through the list of tuples and print each tuple (all elements)
print("EXAMPLE 6")
print("")
print("Print all tuples in list of tuples...")
print("")
for t in list_of_tuples:
    print(t)
print("")
print("...Done!")
print("")

# Loop through the list of tuples and print each element in each tuple
print("EXAMPLE 7")
print("")
print("Print each element in each tuple...")
print("")
for t in list_of_tuples:
    # Print first element in tuple
    print(f"First element: {t[0]}")
    # Print second element in tuple
    print(f"Second element: {t[1]}")
    # Print third element in tuple
    print(f"Third element: {t[2]}")
    # Print fourth element in tuple
    print(f"Fourth element: {t[3]}")
    # Add a space after print the last element of each tuple in loop
    print("")
print("...Done!")
